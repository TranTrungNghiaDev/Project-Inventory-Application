<html>
    <head>
        <title>Headphone</title>
    </head>
    <body>
        <h1>This is a headphone page</h1>
        <% products.map(product => { %>
            <img src="<%= product.image_url %>" alt="<%=product.name  %> image">
            <h2><%=product.name  %></h2>
            <form action="/updateProduct" method="get">
                <input type="text" name="product_id" value="<%=product.id %>" readonly hidden>
                <label for="price">Price($): </label>
                <input type="number" step="0.01" name="price" value="<%=product.price %>" readonly>
                <label for="stock">Stock: </label>
                <input type="number" name="stock" value="<%=product.stock %>" readonly>
                            
                <label for="category">Category: </label>             
                <input type="text" name="category" value="<%=product.category%>" readonly>  
                
                <input type="text" name="image_url" value="<%=product.image_url %>" hidden>
                <button type="submit">Update</button>
            </form>
        <% } )%>
    </body>
</html>